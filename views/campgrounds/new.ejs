<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Add a Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" name="campground[image]" id="image">
      </div>  
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price-label" name="campground[price]">
        </div>
      </div>
      <div class="mb-4">
        <button class="btn btn-success" type="submit">Add Campground</button>
      </div>
    </form>
    <div class="mb-5">
      <a class="p-0 rounded" href="/campgrounds">Back to All Campgrounds</a>
    </div>
  </div>
</div>

